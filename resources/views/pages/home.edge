<!DOCTYPE html>
<html class="" lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>TODO</title>
  <link rel="icon" type="image/png" href="/assets/favicon.png" />

  @vite(['resources/css/app.css', 'resources/js/app.js'])
</head>
<body class="dark:bg-neutral-veryDarkBlue bg-[url('/resources/images/bg-desktop-light.jpg')] bg-no-repeat">
  <section class="container mt-20">
    <div class="flex justify-between items-center">
      <h1 class="text-white font-700 text-4xl tracking-widest">TODO</h1>
      <button>
        <img src="{{ asset('resources/images/icon-moon.svg') }}" alt="">
      </button>
    </div>

    <form class="flex bg-white mt-4 py-2 px-4 items-center rounded-md">
      {{ csrfField() }}

      <label class="rounded-full border relative cursor-pointer">
        <input type="checkbox" name="checkbox" class="hidden peer">
        <img src="{{ asset('resources/images/icon-check.svg') }}" class="w-4 h-4 rounded-full peer-checked:bg-primary-brightBlue" />
      </label>
      <input autocomplete="off" class="outline-none p-2 w-full ml-3" name="todo" placeholder="Create a new todo..." type="text">
    </form>

    <div class="mt-5 shadow-2xl rounded-md">
      <div class="overflow-x-auto min-h-80 bg-white max-h-80">
        @each(todo in todos)
          <div class="flex bg-white py-2 px-4 items-center group border boder-b-2">
            <button class="rounded-full border">
              @if(todo.isCompleted)
                <img src="{{ asset('resources/images/icon-check.svg') }}" class="w-4 h-4 bg-neutral-veryDarkGrayishBlue" alt="check">
              @else
                <img src="{{ asset('resources/images/icon-check.svg') }}" class="w-4 h-4" alt="check">
              @end
            </button>
            <input class="outline-none p-2 w-full ml-3 cursor-pointer" type="text" value="{{ todo.todo }}">
            <button class="hidden group-hover:block cursor-pointer">
              <img src="{{ asset('resources/images/icon-cross.svg') }}" class="w-4 h-4" alt="check">
            </button>
          </div>
        @end
      </div>
      <div class="flex justify-between items-center py-2 px-4 border border-t-2">
        <p class="text-xs text-neutral-darkGrayishBlue">{{ todos.length }} items left</p>
        <div class="text-xs space-x-2">
          <button class="text-primary-brightBlue duration-300 transition hover:text-lightGrayishBlue">All</button>
          <button class="hover:text-lightGrayishBlue transition-all">Active</button>
          <button class="text-neutral-darkGrayishBlue">Completed</button>
        </div>
        <button class="text-xs hover:text-primary-brightBlue">Clear Completed</button>
      </div>
    </div>
  </section>
</body>
</html>
